source 'https://rubygems.org'

gem 'rails', '4.2.4'
gem 'pg'

gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

gem 'devise'
gem 'pundit'
gem 'simple_form'
gem 'flutie'

gem 'bourbon'
gem 'neat'
gem 'paloma'

group :development do
  gem 'thin'
  gem 'foreman'
  gem 'pry-rails'

  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'quiet_assets'

  gem 'brakeman', require: false
  gem 'rubocop', require: false

  gem 'awesome_print'
  gem 'i18n-debug'
end

group :development, :test do
  gem 'rspec'

  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'spring-commands-rspec'

  gem 'pry-byebug'
  gem 'pry-doc'
end

group :production do
  gem 'newrelic_rpm'
end
